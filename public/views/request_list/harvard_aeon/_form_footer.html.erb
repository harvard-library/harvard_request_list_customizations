<div class="row">
  <div class="col-sm-10 no-pad">
    <div class="rl-request-form-header">
      <%= t('plugin.request_list.request_form_subtitle')  %>
    </div>
  </div>
</div>

<div class="row">

  <div class="form-group col-sm-3 form-option-container">
    <div class="form-group rl-ha-type-select">
      <label class="control-label type-request-label"><%= t('plugin.request_list.options.request_type') %></label>
      <div class="type-request-select-box">
        <select name="request_type" id="request_type_select" class="form-control rl-ha-list-input required">
          <% handler.list_opts[:request_types].each do |type, values| %>
            <option value="<%= ASUtils.to_json(values) %>"><%= type %></option>
          <% end %>         
        </select>
      </div>
    </div>
  </div>


  <div class="rl-ha-additional-fields">

    <div class="rl-ha-options-form" id="rl-readingroom-options-form" data-request-type="readingroom">

      <div class="form-group col-sm-4 form-option-container">
        <label class="control-label date-options-label" title="Required"><%= t('plugin.request_list.options.date') %> *</label>
        <div class="input-group datepicker rl-datepicker">
          <input class="date-field form-control rl-ha-list-input required"
                 title="<%= t('plugin.request_list.options.date_help') %>"
                 data-format="mm/dd/yyyy"
                 data-date="<%= Date.today.strftime('%m/%d/%Y') %>"
                 data-date-start-date="<%= Date.today.strftime('%m/%d/%Y') %>"
                 data-autoclose="true"
                 data-force-parse="true"
                 placeholder="MM/DD/YYYY"
                 name="ScheduledDate">
        </div>
      </div>

    </div>


    <div class="rl-ha-options-form" id="rl-saved-options-form" data-request-type="saved">
      <span></span>
    </div>


    <div class="rl-ha-options-form" id="rl-photoduplication-options-form" data-request-type="photoduplication">
      <div class="form-group col-sm-3">
        <label class="control-label photoduplication-label" title="Required"><%= t('plugin.request_list.options.format') %> *</label>
        <div class="type-request-select-box">
	        <select name="Format" class="form-control rl-ha-list-input required">
	          <option value="">...</option>
	          <% handler.list_opts[:format_options].each do |option| %>
	            <option value="<%= option %>"><%= option %></option>
	          <% end %>
	        </select>
        </div>
      </div>

      <div class="form-group col-sm-3 form-option-container">
        <label class="control-label option-delivery-label" title="Required"><%= t('plugin.request_list.options.delivery') %> *</label>
        <div class="type-request-select-box">
	        <select name="ShippingOption" class="form-control rl-ha-list-input required">
	          <option value="">...</option>
	          <% handler.list_opts[:delivery_options].each do |option| %>
	            <option value="<%= option %>"><%= option %></option>
	          <% end %>
	        </select>
        </div>
      </div>

      <div class="form-group col-sm-2 form-option-container">
        <label class="control-label option-publication-label" style="display:inline"><%= t('plugin.request_list.options.for_publication') %></label>
        &nbsp;
        <div class="rl-ha-publication-checkbox">
	        <input type="checkbox" name="ForPublication" class="rl-ha-list-input rl-ha-list-input-checkbox" value="Yes"/>
	        <span class="yes_for_publication"><%= t('plugin.request_list.options.for_publication_yes')%></span>
	    </div>
      </div>
    </div>
  </div>
</div>



<div class="row">

  <div class="form-group rl-ha-notes-and-questions col-sm-5">
    <div class="form-group">
      <label class="control-label notes-question-label"><%= t('plugin.request_list.options.notes') %></label>
      <textarea name="Notes"
                rows="3"
                class="form-control rl-ha-list-input notes-question-textarea"
                title="<%= t('plugin.request_list.options.notes_help') %>"
                maxlength="65536"></textarea>
    </div>
  </div>

<div class="row">
  <div class="col-sm-8"></div>
  <div class="col-sm-2 submit-button-panel">
    <div class="rl-submit-button">
      <button type="submit" class="btn btn-secondary submit-requests"><%= t('plugin.request_list.submit_button_label') %></button>
    </div>
  </div>
</div>